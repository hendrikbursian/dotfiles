#!/usr/bin/env zsh

function git-make-worktree() {
    git config remote.origin.fetch '+refs/heads/*:refs/remotes/origin/*'
    git fetch
}

function update_neovim() {
    tmp_path=/tmp/nvim.appimage

    nvim -v

    echo ""
    echo ""
    echo "Downloading Neovim Appimage..."

    curl -Lo $tmp_path https://github.com/neovim/neovim/releases/download/nightly/nvim.appimage
    chmod u+x $tmp_path
    sudo mv $tmp_path /usr/local/bin/nvim

    echo "Neovim updated!"
    echo ""
    echo ""

    nvim -v
}
