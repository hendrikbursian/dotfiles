font pango:BlexMono Nerd Font Text 9

default_border pixel 1
default_floating_border normal 0
hide_edge_borders none

floating_modifier Mod4

focus_wrapping no
focus_follows_mouse always
focus_on_window_activation smart

workspace_layout default
workspace_auto_back_and_forth no
  
# Mouse
mouse_warping output
seat * hide_cursor 8000
tiling_drag enable

# Colors
set $bg-good       #8ec07c
set $bg-info       #458588
set $bg-focused    #d65d0e
set $bg-warn       #d79921
set $bg-inactive   #323232
set $bg-urgent     #cc241d

set $text          #eeeeec
set $text-inactive #babdb6

set $bar           #000000
set $statusline    #e0e0e0

client.focused          $bg-focused   $bg-focused  $text          $bg-info $bg-info
client.unfocused        $bg-inactive  $bg-inactive $text-inactive $bar        $bar
client.focused_inactive $bg-inactive  $bg-inactive $text-inactive $bar        $bar
client.urgent           $bg-urgent    $bg-urgent   $text          $bar        $bar

set $ws1   1 Konsole
set $ws2   2 Arbeit
set $ws3   3 Browser
set $ws4   4 Notizen
set $ws5   5 Nachrichten
set $ws6   6 Finanzen
set $ws7   7 Musik
set $ws8   8 Tagebuch
set $ws9   9 
set $ws10 10 

# Focus
bindsym Mod4+1 workspace $ws1 
bindsym Mod4+2 workspace $ws2
bindsym Mod4+3 workspace $ws3
bindsym Mod4+4 workspace $ws4
bindsym Mod4+5 workspace $ws5
bindsym Mod4+6 workspace $ws6
bindsym Mod4+7 workspace $ws7
bindsym Mod4+8 workspace $ws8
bindsym Mod4+9 workspace $ws9
bindsym Mod4+0 workspace $ws10

bindsym Mod4+Up focus up
bindsym Mod4+k focus up

bindsym Mod4+Down focus down
bindsym Mod4+j focus down

bindsym Mod4+Left focus left
bindsym Mod4+h focus left

bindsym Mod4+Right focus right
bindsym Mod4+l focus right

# Moving
bindsym Mod4+Shift+1 move container to workspace $ws1 
bindsym Mod4+Shift+2 move container to workspace $ws2
bindsym Mod4+Shift+3 move container to workspace $ws3
bindsym Mod4+Shift+4 move container to workspace $ws4
bindsym Mod4+Shift+5 move container to workspace $ws5
bindsym Mod4+Shift+6 move container to workspace $ws6
bindsym Mod4+Shift+7 move container to workspace $ws7
bindsym Mod4+Shift+8 move container to workspace $ws8
bindsym Mod4+Shift+9 move container to workspace $ws9
bindsym Mod4+Shift+0 move container to workspace $ws10

bindsym Mod4+Shift+Up move up
bindsym Mod4+Shift+k move up

bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+Down move down

bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+Left move left

bindsym Mod4+Shift+l move right
bindsym Mod4+Shift+Right move right

# Moving and focusing
bindsym Mod4+Alt+1 move container to workspace $ws1; workspace $ws1
bindsym Mod4+Alt+2 move container to workspace $ws2; workspace $ws1
bindsym Mod4+Alt+3 move container to workspace $ws3; workspace $ws3
bindsym Mod4+Alt+4 move container to workspace $ws4; workspace $ws4
bindsym Mod4+Alt+5 move container to workspace $ws5; workspace $ws5
bindsym Mod4+Alt+6 move container to workspace $ws6; workspace $ws6
bindsym Mod4+Alt+7 move container to workspace $ws7; workspace $ws7
bindsym Mod4+Alt+8 move container to workspace $ws8; workspace $ws8
bindsym Mod4+Alt+9 move container to workspace $ws9; workspace $ws9
bindsym Mod4+Alt+0 move container to workspace $ws10; workspace $ws10

# File explorer
bindsym Mod4+Shift+n exec xdg-open /home/hendrik

# Browser 
bindsym Mod4+Shift+Return exec epiphany --new-window

# Launcher
bindsym Mod4+Space exec dmenu_path | dmenu --fast --insensitive --nb="$bar" --font 'BlexMono Nerd Font Text' | xargs swaymsg exec --

# Terminal
bindsym Mod4+Return exec foot

# Commands
bindsym Mod4+a focus parent
bindsym Mod4+t layout toggle all
bindsym Mod4+f fullscreen toggle
bindsym Mod4+minus scratchpad show
bindsym Mod4+r mode resize
bindsym Mod4+c exec XDG_CURRENT_DESKTOP=gnome gnome-control-center

bindsym Mod4+Shift+t focus mode_toggle
bindsym Mod4+Shift+q kill
bindsym Mod4+Shift+c reload
bindsym Mod4+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
bindsym Mod4+Shift+minus move scratchpad
bindsym Mod4+Shift+f floating toggle

# Media keys
bindsym XF86AudioLowerVolume exec 'pactl set-sink-volume @DEFAULT_SINK@ -1%'
bindsym XF86AudioMute exec'pactl set-sink-mute @DEFAULT_SINK@ toggle'
bindsym XF86AudioRaiseVolume exec 'pactl set-sink-volume @DEFAULT_SINK@ +1%'
bindsym XF86MonBrightnessDown exec light -U 5
bindsym Mod4+Alt+Backspace input "type:keyboard" xkb_switch_layout next  
                        
input "type:keyboard" {  
    repeat_delay 240
    repeat_rate 60
    xkb_options caps:escape
    xkb_layout us,de
}

input "type:touchpad" {
    accel_profile flat
    dwt enabled
    natural_scroll enabled
    pointer_accel 0.5
    tap enabled
}

mode "resize" {
  bindsym Down resize grow height 32 px
  bindsym Left resize shrink width 32 px
  bindsym Return mode default
  bindsym Right resize grow width 10 px
  bindsym Up resize shrink height 10 px
  bindsym h resize shrink width 10 px
  bindsym j resize grow height 10 px
  bindsym k resize shrink height 10 px
  bindsym l resize grow width 32 px
  bindsym Escape mode default
}

# Gaps
gaps inner 10
gaps outer 0
smart_gaps off

# Bar
bar {
  id top
  position top
  status_command i3status-rs 
  swaybar_command swaybar
  workspace_buttons yes
  strip_workspace_numbers no
  tray_output *
  colors {
    focused_workspace $bg-focused $bg-focused $text
  }
}

# Assigns
assign [app_id="^org.gnome.TextEditor"] $ws4

# Startup
exec swaymsg workspace $ws4;
exec gnome-text-editor
exec "dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP XDG_SESSION_TYPE NIXOS_OZONE_WL XCURSOR_THEME XCURSOR_SIZE; systemctl --user start sway-session.target"

